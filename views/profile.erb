<h1>Your recent workout logs:</h1>

<section class="workouts">
  <% current_user.workouts.each do |workout| %>
    <section class="workout-details">
      <h3>Workout title: <%= workout.title %></h3>
      <% workout.exercises_workouts.each do |exercise_workout_rel| %>
        <p>
          <h4>Exercise: <%= exercise_list.find_by(id: exercise_workout_rel.exercise_id).title %> | Total weight lifted: <%= exercise_workout_rel.logs.sum('weight')%>kg</h4>
        </p>

        <% exercise_workout_rel.logs.each do |log| %>
          <p>
            Set: <%= log.set_no %> |
            Weight: <%= log.weight %>kg |
            Reps: <%= log.reps %>
          </p>
        <% end %>
      <% end %>
    </section>
  <% end %>
</section>