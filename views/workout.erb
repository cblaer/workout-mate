<h1><a href="/workouts/new">>> Create new workout <<</a></h1>

<h2>Saved workouts:</h2>

<% current_user.workouts.each do |workout| %>

<section class="workout-details">
      <p>Workout Title: <%= workout.title %></p>
      <p>Workout Description:</p>
      <p><%= workout.description %></p>

      <form action="/workouts/<%= workout.id %>/log">
        <button>Log workout</button>
      </form>

      <form action="/workouts/<%= workout.id %>/edit">
        <button>Edit workout</button>
      </form>

      <form action="/workouts/<%= workout.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <button id="delete-workout-btn">Delete workout</button>
      </form>

</section>

<% end %>