<section class="popular-workouts">
  <% Workout.all.each do |workout| %>
    <section class="workout-details">
      <p>Title: <%= workout.title %></p>
      <p>Created by: <%= workout.user.username %></p>
      <p>Description: <%= workout.description %></p>
      <p>Most recent log: <%= workout.exercises_workouts.last.logs.order(:created_date).last.created_date.to_time.to_date %></p>
      <p>Exercises:</p>
      <% workout.exercises_workouts.each do |relationship| %>
        <p><%= relationship.exercise.title %></p>
      <% end %>
    </section>
  <% end %>
</section>